{
  "name": "vite-plugin-checker",
  "version": "0.7.1",
  "description": "Vite plugin that runs TypeScript type checker on a separate process.",
  "types": "./dist/esm/main.d.ts",
  "main": "./dist/cjs/main.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/esm/main.d.ts",
      "import": "./dist/esm/main.js",
      "require": "./dist/cjs/main.js"
    }
  },
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "dist",
    "!dist/checkers/vueTsc/typescript-vue-tsc"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "build": "tsup && node ../../scripts/patchCjs.mjs",
    "build:test": "tsup --sourcemap inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fi3ework/vite-plugin-checker.git"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "typescript"
  ],
  "author": "fi3ework <fi3ework@gmail.com>",
  "license": "MIT",
  "bugs": "https://github.com/fi3ework/vite-plugin-checker/issues",
  "homepage": "https://github.com/fi3ework/vite-plugin-checker",
  "dependencies": {
    "@babel/code-frame": "^7.12.13",
    "ansi-escapes": "^4.3.0",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "commander": "^8.0.0",
    "fast-glob": "^3.2.7",
    "fs-extra": "^11.1.0",
    "npm-run-path": "^4.0.1",
    "strip-ansi": "^6.0.0",
    "tiny-invariant": "^1.1.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-languageserver": "^7.0.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-uri": "^3.0.2"
  },
  "peerDependencies": {
    "eslint": ">=7",
    "meow": "^9.0.0",
    "optionator": "^0.9.1",
    "stylelint": ">=13",
    "typescript": "*",
    "vite": ">=2.0.0",
    "vls": "*",
    "vti": "*",
    "vue-tsc": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "meow": {
      "optional": true
    },
    "stylelint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vls": {
      "optional": true
    },
    "vti": {
      "optional": true
    },
    "optionator": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/eslint": "^7.2.14",
    "@types/fs-extra": "^11.0.1",
    "@vue/language-core": "^2.0.14",
    "esbuild": "^0.14.27",
    "meow": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "stylelint": "^14.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vls": "^0.8.5",
    "vti": "^0.1.11",
    "vue-tsc": "^2.0.14"
  }
}
