{
  "extends": [
    "@tsconfig/strictest/tsconfig",
    "@tsconfig/node18/tsconfig",
    "@tsconfig/esm/tsconfig"
  ],
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false
  },
  "include": ["src", "__tests__"],
  "exclude": ["src/@runtime"]
}
