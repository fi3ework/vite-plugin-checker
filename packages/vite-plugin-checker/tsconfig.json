{
  "extends": [
    "@tsconfig/strictest/tsconfig.json",
    "@tsconfig/node20/tsconfig.json"
  ],
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "noUnusedParameters": false,
    "module": "preserve",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false
  },
  "include": ["src", "__tests__"],
  "exclude": ["src/@runtime"]
}
