{
  "include": ["./"],
  "exclude": ["**/dist/**"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "jsx": "preserve"
  }
}
