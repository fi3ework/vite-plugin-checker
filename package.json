{
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "pnpm -r --filter ./packages --parallel run dev",
    "build": "pnpm -r --filter ./packages run build",
    "build:test": "pnpm -r --filter ./packages run build:test",
    "lint": "eslint --ext .js,.ts packages/*/src/**",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage=true",
    "changelog": "pnpm -r --filter ./packages run changelog",
    "test:watch": "jest -w",
    "type-check": "pnpm -r --parallel --filter ./packages exec -- tsc --noEmit -p tsconfig.build.json",
    "ci:publish": "zx scripts/publish.mjs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{packages}/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.2",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.11",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.31",
    "@types/prompts": "^2.0.13",
    "@types/rimraf": "^3.0.0",
    "@types/semver": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chalk": "^4.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.20.0",
    "eslint-config-alloy": "^3.10.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "4.3.7",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "minimist": "^1.2.5",
    "playwright-chromium": "^1.7.0",
    "prompts": "^2.4.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "strip-ansi": "^7.0.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.2.2",
    "vite": "^2.3.8",
    "vite-plugin-checker": "workspace:*",
    "vite-plugin-checker-vls": "workspace:*",
    "zx": "^1.14.2"
  }
}
